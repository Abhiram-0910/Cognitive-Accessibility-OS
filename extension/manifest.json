{
  "manifest_version": 3,
  "name": "NeuroAdaptive OS",
  "version": "1.0.0",
  "description": "Cognitive accessibility layer for modern enterprise tools.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.slack.com/*",
    "https://mail.google.com/*",
    "https://*.atlassian.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*",
        "https://mail.google.com/*",
        "https://*.atlassian.net/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "NeuroAdaptive OS Options"
  }
}