# ==========================================
# BACKEND ENVIRONMENT VARIABLES
# ==========================================

# Server Configuration
PORT=3000
CLIENT_URL=http://localhost:5173

# AI & LangChain Orchestration
GEMINI_API_KEY=your_google_gemini_api_key_here

# Supabase Admin (Bypasses RLS - NEVER expose to frontend)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Security Encryption (Must be a 32-byte / 64-character hex string)
# You can generate a random one in your terminal by running:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=your_32_byte_hex_string_here

# Optional: Google Workspace OAuth (For Gmail/Calendar integrations)
# You can leave these blank if you are only mocking the OAuth flow for the demo
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback